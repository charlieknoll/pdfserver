<div class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        <p>

            <img width="200" src="/images/logo.png" style="margin: auto" />

        </p>
        {{# if errors }} {{# each errors }}
        <p class="alert alert-danger">{{ this }}</p>
        {{/each}} {{/if}} {{# unless errors}}
        <p>Welcome back! Please enter your email and password to continue.</p>
        {{/unless}}
        <form class="m-t" role="form" action="/user/signin" method="POST">
            <div class="form-group ">
                <input class="form-control " placeholder="email " required=" " name="username" type="email">
            </div>
            <div class="form-group ">
                <input type="password" class="form-control " placeholder="Password " required=" " name="password">
            </div>
            <button type="submit " class="btn btn-primary block full-width m-b ">Login</button>

            <a href="/user/reset-password">
                <small>Forgot password?</small>
            </a>
            <p class="text-muted text-center ">
                <small>Don't have an account?
                    <a href="/user/signup ">Sign up</a>
                </small>
            </p>
        </form>

    </div>
</div>