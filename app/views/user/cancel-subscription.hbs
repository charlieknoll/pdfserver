<main id="js-page-content" role="main" class="page-content">

  <div class="subheader">
    <h1 class="subheader-title">
      <i class='subheader-icon fal fa-'></i> Cancel Subscription?
    </h1>
  </div>

  <div class="row">
    <div class="col-xl-12">
      <div id="panel-1" class="panel">
        <div class="panel-container show">
          <div class="panel-content">

            {{# if this.errorMessage }}
            <p class="alert alert-danger">An unexpected error occurred, pleasy try again. <br />{{ this.errorMessage }}
            </p>
            {{/if}}
            <p>Are you sure you want to cancel your subscription to the <strong>{{this.plan.name}} plan</strong>?</p>
            <p class="text-muted">
              <small>Your account will be refunded a prorated amount based on the credits used this billing
                period.</small>
            </p>
            <form style="width: 200px;" method="POST">
              <div class="form-group">
                <button type="submit " class="btn btn-primary block full-width m-b ">Yes, cancel my
                  subscription</button>

              </div>
              <div class="form-group">
                <a class="btn btn-sm btn-dark btn-block " href="/user/dashboard ">No, return to the dashboard</a>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</main>