<div class="flex-1"
    style="background: url(img/svg/pattern-1.svg) no-repeat center bottom fixed; background-size: cover;">
    <div class="container py-4 py-lg-5 my-lg-5 px-4 px-sm-0">
        <div class="row">
            <div class="col-xl-12">
                <h2 class="fs-xxl fw-500 mt-4 text-white text-center">
                    Create a free account
                    <small class="h3 fw-300 mt-3 mb-5 text-white opacity-60 hidden-sm-down">
                        No credit card needed, 100 credits to start.
                    </small>
                </h2>
            </div>
            <div class="col-xl-6 ml-auto mr-auto">
                <div class="card p-4 rounded-plus bg-faded">
                    <div class="blankpage-header">
                        {{# if errors }} {{# each errors }}
                        <p class="alert alert-danger">{{ this }}</p>
                        {{/each}} {{/if}}

                    </div>
                    <form class="m-t" role="form" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Your Name" required="" name="name"
                                value="{{name}}">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Email" required="" name="username"
                                value="{{username}}">
                        </div>
                        <div class="form-group ">
                            <input type="password" class="form-control " placeholder="Password " required=" "
                                name="password">
                        </div>
                        <button type="submit" class="btn btn-primary block full-width m-b">Register</button>

                        <p>
                            <br>
                            By clicking "Register" you agree to our
                            <a href="/terms-of-service">terms of service</a> and
                            <a href="/privacy-policy">privacy policy</a>. We'll occasionally send you account
                            related emails.
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="d-block text-center text-white">
        2019 Â© &nbsp;<a href='https://www.responsivepaper.com' class='text-white opacity-40 fw-500'
            title='responsivepaper.com' target='_blank'>responsivepaper.com</a>
    </div>
</div>