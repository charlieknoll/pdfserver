</head>

<body class="mod-bg-1 ">
  <div class="page-wrapper">
    <div class="page-inner bg-brand-gradient">
      <div class="page-content-wrapper bg-transparent m-0">
        <div class="height-10 w-100 shadow-lg px-4 bg-brand-gradient">
          <div class="d-flex align-items-center container p-0">
            <div
              class="position-relative page-logo width-mobile-auto m-0 align-items-center justify-content-center p-0 bg-transparent bg-img-none shadow-0 height-9">
              <a href="/" class="page-logo-link  d-flex align-items-center">
                <img src="/images/logo.png" alt="ResponsivePaper WebApp" aria-roledescription="logo">
                <span class="page-logo-text mr-1">Responsive Paper</span>
                <span class="position-absolute text-white opacity-50 small pos-top pos-right mr-4 mt-2">nextgen HTML to
                  PDF</span>
              </a>
            </div>
            <span class="text-white opacity-50 ml-auto mr-2 hidden-sm-down">
              Already have an account?
            </span>
            <a href="/user/signin" class="btn-link text-white ml-auto ml-sm-0">
              Secure Login
            </a>
          </div>
        </div>
        {{{body}}}
      </div>
    </div>
  </div>
  <!-- END Page Wrapper -->
